{
  "name": "@applemusic-like-lyrics/react",
  "version": "0.2.0",
  "description": "AMLL 组件库的 React 绑定",
  "repository": {
    "url": "https://github.com/Steve-xmh/applemusic-like-lyrics.git",
    "directory": "packages/react",
    "type": "git"
  },
  "license": "GPL-3.0",
  "nx": {
    "tags": [
      "library"
    ]
  },
  "type": "module",
  "files": [
    "dist/**/*.js",
    "dist/**/*.ts",
    "dist/**/*.cjs",
    "dist/**/*.map"
  ],
  "main": "./dist/amll-react.cjs",
  "module": "./dist/amll-react.js",
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/amll-react.js",
      "require": "./dist/amll-react.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.11",
    "vite-plugin-dts": "^4.5.4",
    "@applemusic-like-lyrics/lyric": "^0.3.0"
  },
  "dependencies": {
    "@applemusic-like-lyrics/core": "^0.2.0"
  },
  "peerDependencies": {
    "@pixi/app": "*",
    "@pixi/core": "*",
    "@pixi/display": "*",
    "@pixi/filter-blur": "*",
    "@pixi/filter-color-matrix": "*",
    "@pixi/sprite": "*",
    "react": "*",
    "react-dom": "*"
  },
  "scripts": {
    "build:docs": "typedoc --plugin typedoc-plugin-markdown --out docs src/index.ts",
    "build": "vite build",
    "build:dev": "vite build",
    "fmt": "biome format --write ./src",
    "dev": "vite dev",
    "preinstall": "npx only-allow pnpm"
  }
}