{
  "name": "@applemusic-like-lyrics/core",
  "version": "0.2.0",
  "description": "AMLL 的纯 JS 核心组件框架，包括歌词显示组件和背景组件等其它可以复用的组件",
  "repository": {
    "url": "https://github.com/Steve-xmh/applemusic-like-lyrics.git",
    "directory": "packages/core",
    "type": "git"
  },
  "license": "GPL-3.0",
  "nx": {
    "tags": [
      "library"
    ]
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.ts",
    "dist/**/*.cjs",
    "dist/**/*.css",
    "dist/**/*.map"
  ],
  "type": "module",
  "main": "./dist/amll-core.cjs",
  "module": "./dist/amll-core.js",
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/amll-core.js",
      "require": "./dist/amll-core.cjs"
    },
    "./style.css": {
      "import": "./dist/amll-core.css",
      "require": "./dist/amll-core.css"
    }
  },
  "devDependencies": {
    "@applemusic-like-lyrics/lyric": "^0.2.4",
    "@biomejs/biome": "^2.2.6",
    "@types/deep-freeze": "^0.1.5",
    "@types/stats.js": "^0.17.3",
    "@types/ungap__structured-clone": "^1.2.0",
    "lil-gui": "^0.20.0",
    "stats.js": "^0.17.0",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.11",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-glsl": "^1.5.1",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "@applemusic-like-lyrics/ttml": "^0.1.1"
  },
  "peerDependencies": {
    "@pixi/app": "*",
    "@pixi/core": "*",
    "@pixi/display": "*",
    "@pixi/filter-blur": "*",
    "@pixi/filter-bulge-pinch": "*",
    "@pixi/filter-color-matrix": "*",
    "@pixi/sprite": "*"
  },
  "dependencies": {
    "@ungap/structured-clone": "^1.3.0",
    "bezier-easing": "^2.1.0",
    "deep-freeze": "^0.0.1",
    "gl-matrix": "4.0.0-beta.2"
  },
  "scripts": {
    "build:docs": "typedoc --plugin typedoc-plugin-markdown --out docs src/index.ts",
    "build": "vite build",
    "build:dev": "vite build",
    "fmt": "biome format --write ./src",
    "dev": "vite dev",
    "preinstall": "npx only-allow pnpm"
  }
}